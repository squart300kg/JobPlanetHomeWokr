<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_symbol"
        android:layout_marginVertical="@dimen/recrutesSearchIconVerticalMargin"
        android:layout_marginStart="@dimen/recrutesSearchIconStartMargin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etSearch"
        android:layout_width="0dp"
        android:layout_height="@dimen/recrutesSearchHeight"
        android:textColor="@color/defaultTextColor"
        android:drawablePadding="@dimen/recrutesSearchEndPadding"
        android:background="@null"
        android:textColorHint="@color/grey"
        android:hint="@string/searchHint"
        android:layout_marginStart="@dimen/recrutesSearchStartMargin"
        app:layout_constraintTop_toTopOf="@id/ivSearch"
        app:layout_constraintBottom_toBottomOf="@id/ivSearch"
        app:layout_constraintStart_toEndOf="@id/ivSearch"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>